---

const { title,description,img} = Astro.props;
---


<div class="card-skill">
    <img
    class="card-skill__img"
    src={img}
    alt="Imagen de habilidades"
    />
    <h4 class="card-skill__title">{title}</h4>
    <div class="card-skill__description-container">
    <p class="card-skill__description-container__description">
      {description}
    </p>
    </div>
</div>

<style>
.card-skill {
  width: 350px;
  height: 500px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: var(--gris);
  border-radius: 15px;
  -webkit-box-shadow: 0px 0px 18px 2px rgba(7,71,71,1);
-moz-box-shadow: 0px 0px 18px 2px rgba(7,71,71,1);
box-shadow: 0px 0px 18px 2px rgba(7,71,71,1);
}

.card-skill__img {
  width: 200px;
  height: 200px;
  margin-top: 20px;
}

.card-skill__title {
  margin: 0;
  color: whitesmoke;
  font-size: 32px;
  margin-top: 20px;
}

.card-skill__description-container {
  height: 180;
  width: 100%;
  padding-left: 20px;
  padding-right: 20px;
}

.card-skill__description-container__description {
  color: whitesmoke;
  font-size: 18px;
  text-align: center;
}


</style>