---

const {title,description, img} = Astro.props
---

<div class="card-skill-mobile">
    <img
      class="card-skill__img-mobile"
      src={img}
      alt="Imagen de habilidades"
    />
    <h4 class="card-skill__title-mobile">{title}</h4>
    <div class="card-skill__description-container-mobile">
      <p
        class="card-skill__description-container__description-mobile"
      >
        {description}
      </p>
    </div>
</div>


<style>
.card-skill-mobile {
  width: 80%;
  height: 90%;
  max-width: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  background-color: var(--gris);
  margin: auto;
  border-radius: 15px;
  -webkit-box-shadow: 0px 0px 18px 2px rgba(7,71,71,1);
-moz-box-shadow: 0px 0px 18px 2px rgba(7,71,71,1);
box-shadow: 0px 0px 18px 2px rgba(7,71,71,1);
}

.card-skill__img-mobile {
  width: 60%;
  height: 40%;
  margin-top: 10px;
}

.card-skill__title-mobile {
  margin: 0;
  color: whitesmoke;
  font-size: 24px;
  margin-top: 10px;
}

.card-skill__description-container-mobile {
  height: 40%;
  width: 100%;
  padding-left: 20px;
  padding-right: 20px;
}

.card-skill__description-container__description-mobile {
  color: whitesmoke;
  font-size: 12px;
  text-align: center;
}

</style>