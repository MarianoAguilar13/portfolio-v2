---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon-m.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
		  href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600&display=swap"
		  rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<a class="arrow-sky" href="#header">
			  <img
				class="arrow-sky__img"
				src="/flecha-hacia-arriba.png"
				alt="Al cielo"
			  />	
		</a>
		<Header></Header>
		<slot />
		<Footer></Footer>
	</body>
</html>
<style is:global>
	:root {
		--celesteOscuro: #45a29e;
		--celesteClaro: #66fcf1;
		--gris: #1f2833;
		--Negrito: #0b0c10;
		--poppins: "Poppins", sans-serif;

	}

	*{
  		box-sizing: border-box;
	}

	body {
		margin: 0;
		padding: 0;
		}

	
.arrow-sky {
  background: var(--celesteOscuro);
  border-radius: 50%;
  width: 70px;
  height: 70px;
  position: fixed;
  top: 85vh;
  left: 92vw;
  transition: 0.7s;
  z-index: 10;
}

@media (max-width: 768px) {
  .arrow-sky {
    display: none;
  }
}

.arrow-sky__img {
  border-radius: 50%;
  width: 70px;
  height: 70px;
  padding: 10px;
}
</style>
